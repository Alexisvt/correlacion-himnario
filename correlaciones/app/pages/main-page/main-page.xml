<Page 
  xmlns="http://www.nativescript.org/tns.xsd" loaded="onLoaded">
  <StackLayout>
    <Label text="Titulo del himno" textWrap="true" />
    <TextField hint="Titulo del himno" text="{{ himnName }}" />
    <GridLayout rows="auto, auto" columns="auto, auto">
      <StackLayout col="0" row="0">
        <Label text="# himno antiguo" textWrap="true" />
        <TextField hint="" text="{{ oldNum }}"  keyboardType="number" />
      </StackLayout>
      <StackLayout col="1" row="0">
        <Label text="# himno nuevo" textWrap="true" />
        <TextField hint="" text="{{ newNum }}" keyboardType="number" />
      </StackLayout>
      <StackLayout row="1" colSpan="2">
        <Button text="Buscar correlacion" tap="{{searchCorrelation}}" id="searchBtn" />
      </StackLayout>
    </GridLayout>
  </StackLayout>
</Page>